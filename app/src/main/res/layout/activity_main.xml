<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_stop_black_24dp"
            android:id="@+id/playStop" android:tint="@android:color/white"
            app:elevation="0dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timerText" app:layout_constraintVertical_bias="0.637"
            app:backgroundTint="@color/colorPrimary"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="199dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/timerText" tools:text="3:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="120sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/time_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_time" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/timerText"
            app:layout_constraintVertical_bias="0.516" android:fontFamily="serif" android:textSize="24sp"
            style="@style/Widget.AppCompat.Button" android:background="@android:color/darker_gray"
    />


</android.support.constraint.ConstraintLayout>